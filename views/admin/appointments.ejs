<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="/js/scripts.js"></script>
    <title>Manage Appointments</title>
</head>
<body>
    <%- include('../partials/header'); %>
    <div class="container">
        <h1>Appointments</h1>
        <table>
            <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Staff</th>
                    <th>Service</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% appointments.forEach(appointment => { %>
                    <tr>
                        <td><%= appointment.patientName %></td>
                        <td><%= appointment.email %></td>
                        <td><%= appointment.phone %></td>
                        <td><%= appointment.date %></td>
                        <td><%= appointment.time %></td>
                        <td><%= appointment.staff %></td>
                        <td><%= appointment.service %></td>
                        <td>
                            <a href="/admin/appointments/edit/<%= appointment._id %>">Edit</a>
                            <a href="/admin/appointments/delete/<%= appointment._id %>" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <%- include('../partials/footer'); %>
</body>
</html>
